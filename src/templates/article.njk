---
layout: base
---

<article class="article-single" itemscope itemtype="https://schema.org/BlogPosting">
  <header class="article-header">
    <h1 class="article-title" itemprop="headline">{{ title }}</h1>
    
    <div class="article-meta">
      <div class="article-date">
        <time datetime="{{ date | htmlDateString }}" itemprop="datePublished">
          {{ date | readableDate }}
        </time>
        {% if lastModified and lastModified != date %}
        <span class="article-updated">
          (Updated: <time datetime="{{ lastModified | htmlDateString }}" itemprop="dateModified">
            {{ lastModified | readableDate }}
          </time>)
        </span>
        {% endif %}
      </div>
      
      <div class="article-reading-time">
        <span class="reading-time">{{ content | readingTime }} min read</span>
      </div>
    </div>
    
    {% if tags and tags.length > 0 %}
    <div class="article-tags">
      <span class="tags-label">Tagged:</span>
      <ul class="tag-list">
        {% for tag in tags %}
        <li class="tag-item">
          <a href="/articles/tag/{{ tag | slug }}/" class="tag-link" rel="tag">
            {{ tag }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
  </header>

  <div class="article-content" itemprop="articleBody">
    {{ content | safe }}
  </div>
  
  {% if codeLanguages and codeLanguages.length > 0 %}
  <div class="article-tech">
    <h3>Technologies mentioned:</h3>
    <ul class="tech-list">
      {% for lang in codeLanguages %}
      <li class="tech-item">{{ lang }}</li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}

  <footer class="article-footer">
    {% if previousArticle or nextArticle %}
    <nav class="article-navigation" aria-label="Article navigation">
      <div class="nav-links">
        {% if previousArticle %}
        <div class="nav-previous">
          <span class="nav-label">Previous article</span>
          <a href="{{ previousArticle.url }}" class="nav-link" rel="prev">
            {{ previousArticle.data.title }}
          </a>
        </div>
        {% endif %}
        
        {% if nextArticle %}
        <div class="nav-next">
          <span class="nav-label">Next article</span>
          <a href="{{ nextArticle.url }}" class="nav-link" rel="next">
            {{ nextArticle.data.title }}
          </a>
        </div>
        {% endif %}
      </div>
    </nav>
    {% endif %}
    
    {% if relatedArticles and relatedArticles.length > 0 %}
    <section class="related-articles">
      <h3>Related Articles</h3>
      <div class="related-grid">
        {% for related in relatedArticles | slice(0, 3) %}
        <article class="related-article">
          <h4 class="related-title">
            <a href="{{ related.url }}">{{ related.data.title }}</a>
          </h4>
          <p class="related-excerpt">{{ related.data.excerpt }}</p>
          <div class="related-meta">
            <time datetime="{{ related.data.date | htmlDateString }}">
              {{ related.data.date | readableDate }}
            </time>
            <span class="related-reading-time">{{ related.templateContent | readingTime }} min read</span>
          </div>
        </article>
        {% endfor %}
      </div>
    </section>
    {% endif %}
    
    <div class="article-actions">
      <a href="/articles/" class="back-to-articles">‚Üê Back to all articles</a>
      
      <div class="share-buttons">
        <span class="share-label">Share this article:</span>
        <a href="https://twitter.com/intent/tweet?text={{ title | urlencode }}&url={{ site.url }}{{ page.url | urlencode }}" 
           target="_blank" 
           rel="noopener"
           class="share-twitter"
           aria-label="Share on Twitter">
          Twitter
        </a>
        <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ site.url }}{{ page.url | urlencode }}" 
           target="_blank" 
           rel="noopener"
           class="share-linkedin"
           aria-label="Share on LinkedIn">
          LinkedIn
        </a>
      </div>
    </div>
  </footer>
</article>

{# Additional structured data for article #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{ title }}",
  "description": "{{ excerpt }}",
  "image": "{% if socialImage %}{{ site.url }}{{ socialImage }}{% else %}{{ site.url }}/assets/images/og-default.jpg{% endif %}",
  "url": "{{ site.url }}{{ page.url }}",
  "datePublished": "{{ date | htmlDateString }}",
  "dateModified": "{{ lastModified | default: date | htmlDateString }}",
  "author": {
    "@type": "Person",
    "name": "{{ site.author.name }}",
    "url": "{{ site.url }}/about/"
  },
  "publisher": {
    "@type": "Person",
    "name": "{{ site.author.name }}"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.url }}{{ page.url }}"
  },
  "wordCount": {{ content | wordcount }},
  "keywords": "{{ tags | join: ', ' }}",
  "about": [
    {% for tag in tags %}
    {
      "@type": "Thing",
      "name": "{{ tag }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>