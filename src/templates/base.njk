<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} | {% endif %}{{ site.title }}</title>
  
  {# SEO Meta Tags #}
  <meta name="description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">
  <meta name="author" content="{{ site.author.name }}">
  
  {# Open Graph Meta Tags #}
  <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title }}">
  <meta property="og:description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:type" content="{% if layout == 'article' %}article{% else %}website{% endif %}">
  <meta property="og:site_name" content="{{ site.title }}">
  {% if socialImage %}
  <meta property="og:image" content="{{ site.url }}{{ socialImage }}">
  {% else %}
  <meta property="og:image" content="{{ site.url }}/assets/images/og-default.jpg">
  {% endif %}
  
  {# Twitter Card Meta Tags #}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title }}">
  <meta name="twitter:description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">
  {% if socialImage %}
  <meta name="twitter:image" content="{{ site.url }}{{ socialImage }}">
  {% endif %}
  
  {# Canonical URL #}
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">
  
  {# RSS Feed #}
  <link rel="alternate" type="application/rss+xml" title="{{ site.title }} RSS Feed" href="{{ site.url }}/feed.xml">
  
  {# Preconnect for performance #}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  
  {# CSS - Critical CSS will be inlined, non-critical loaded async #}
  <link rel="stylesheet" href="/css/main.css">
  
  {# Favicon #}
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon-16x16.png">
  
  {# Structured Data #}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "{% if layout == 'article' %}BlogPosting{% else %}Website{% endif %}",
    "headline": "{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}",
    "description": "{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}",
    "url": "{{ site.url }}{{ page.url }}",
    {% if layout == 'article' %}
    "datePublished": "{{ date | htmlDateString }}",
    "dateModified": "{{ (lastModified or date) | htmlDateString }}",
    "wordCount": {{ content | wordcount }},
    "readingTime": "PT{{ content | readingTime }}M",
    {% endif %}
    "author": {
      "@type": "Person",
      "name": "{{ site.author.name }}",
      "url": "{{ site.url }}/about/"
    },
    "publisher": {
      "@type": "Person",
      "name": "{{ site.author.name }}"
    }
  }
  </script>
</head>

<body class="{% if layout %}layout-{{ layout }}{% endif %}{% if featured %} featured-post{% endif %}">
  {# Skip to main content for accessibility #}
  <a href="#main-content" class="skip-link">Skip to main content</a>
  
  <header class="site-header" role="banner">
    <div class="header-container">
      <div class="site-branding">
        <h1 class="site-title">
          <a href="/" rel="home">{{ site.title }}</a>
        </h1>
        <p class="site-description">{{ site.description }}</p>
      </div>
      
      <nav class="main-navigation" role="navigation" aria-label="Main navigation">
        <ul class="nav-menu">
          {% for item in site.navigation %}
          <li class="nav-item">
            <a href="{{ item.url }}" class="nav-link{% if page.url == item.url %} current{% endif %}">
              {{ item.label }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </header>

  <main id="main-content" class="site-main" role="main">
    {{ content | safe }}
  </main>

  <footer class="site-footer" role="contentinfo">
    <div class="footer-container">
      <div class="footer-content">
        <div class="footer-info">
          <p>&copy; {% year %} {{ site.author.name }}. All rights reserved.</p>
          <p>Built with <a href="https://www.11ty.dev/" rel="noopener" target="_blank">Eleventy</a></p>
        </div>
        
        {% if site.author.social %}
        <div class="footer-social">
          <h3 class="footer-heading">Connect</h3>
          <ul class="social-links">
            {% if site.author.social.github %}
            <li>
              <a href="{{ site.author.social.github }}" rel="noopener" target="_blank" aria-label="GitHub Profile">
                GitHub
              </a>
            </li>
            {% endif %}
            {% if site.author.social.linkedin %}
            <li>
              <a href="{{ site.author.social.linkedin }}" rel="noopener" target="_blank" aria-label="LinkedIn Profile">
                LinkedIn
              </a>
            </li>
            {% endif %}
            {% if site.author.social.twitter %}
            <li>
              <a href="{{ site.author.social.twitter }}" rel="noopener" target="_blank" aria-label="Twitter Profile">
                Twitter
              </a>
            </li>
            {% endif %}
          </ul>
        </div>
        {% endif %}
        
        <div class="footer-links">
          <h3 class="footer-heading">Site</h3>
          <ul>
            <li><a href="/feed.xml">RSS Feed</a></li>
            <li><a href="/sitemap.xml">Sitemap</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

  {# Minimal JavaScript for progressive enhancement #}
  <script>
    // Basic theme detection and accessibility enhancements
    (function() {
      // Focus management for skip links
      const skipLink = document.querySelector('.skip-link');
      if (skipLink) {
        skipLink.addEventListener('click', function(e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.focus();
            target.scrollIntoView();
          }
        });
      }
      
      // Add focus styles for keyboard navigation
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Tab') {
          document.body.classList.add('using-keyboard');
        }
      });
      
      document.addEventListener('mousedown', function() {
        document.body.classList.remove('using-keyboard');
      });
    })();
  </script>
</body>
</html>