---
layout: base
---

<div class="about-page">
  <article class="about-content">
    <header class="about-header">
      <div class="about-intro">
        <div class="about-photo">
          <img src="{{ site.author.photo }}" 
               alt="{{ site.author.name }}" 
               class="author-image-large"
               width="300" 
               height="300">
        </div>
        
        <div class="about-basic">
          <h1 class="about-name">{{ site.author.name }}</h1>
          <p class="about-title">{{ site.author.title }}</p>
          {% if site.author.location %}
          <p class="about-location">üìç {{ site.author.location }}</p>
          {% endif %}
        </div>
      </div>
    </header>

    <div class="about-main">
      <section class="about-bio">
        <h2>About Me</h2>
        <div class="bio-content">
          {{ content | safe }}
        </div>
      </section>

      {% if site.author.skills and site.author.skills.length > 0 %}
      <section class="about-skills">
        <h2>Technical Expertise</h2>
        <div class="skills-grid">
          {% for skill in site.author.skills %}
          <div class="skill-card">
            <span class="skill-name">{{ skill }}</span>
          </div>
          {% endfor %}
        </div>
      </section>
      {% endif %}

      <section class="about-blog">
        <h2>About This Blog</h2>
        <div class="blog-info">
          <p>{{ site.description }}</p>
          
          <div class="blog-stats">
            <div class="stat-item">
              <span class="stat-number">{{ collections.posts.length }}</span>
              <span class="stat-label">Articles Published</span>
            </div>
            
            {% set totalWords = 0 %}
            {% for post in collections.posts %}
              {% set totalWords = totalWords + (post.templateContent | wordcount) %}
            {% endfor %}
            
            <div class="stat-item">
              <span class="stat-number">{{ (totalWords / 1000) | round }}K</span>
              <span class="stat-label">Words Written</span>
            </div>
            
            {% set totalReadingTime = 0 %}
            {% for post in collections.posts %}
              {% set totalReadingTime = totalReadingTime + (post.templateContent | readingTime) %}
            {% endfor %}
            
            <div class="stat-item">
              <span class="stat-number">{{ totalReadingTime }}</span>
              <span class="stat-label">Minutes of Content</span>
            </div>
            
            {% if collections.tagList.length > 0 %}
            <div class="stat-item">
              <span class="stat-number">{{ collections.tagList.length }}</span>
              <span class="stat-label">Topics Covered</span>
            </div>
            {% endif %}
          </div>
          
          {% if collections.tagList.length > 0 %}
          <div class="blog-topics">
            <h3>Topics I Write About</h3>
            <div class="topics-list">
              {% for tag in collections.tagList %}
              {% set taggedPosts = collections.posts | filterByTag(tag) %}
              <a href="/articles/tag/{{ tag | slug }}/" 
                 class="topic-tag"
                 title="{{ taggedPosts.length }} articles">
                {{ tag }}
              </a>
              {% endfor %}
            </div>
          </div>
          {% endif %}
        </div>
      </section>

      <section class="about-connect">
        <h2>Let's Connect</h2>
        
        {% if site.author.social %}
        <div class="connect-social">
          <p>Find me on social media and professional networks:</p>
          <div class="social-links-extended">
            {% if site.author.social.github %}
            <a href="{{ site.author.social.github }}" 
               rel="noopener" 
               target="_blank" 
               class="social-link-card social-github">
              <div class="social-icon">üìÑ</div>
              <div class="social-info">
                <span class="social-platform">GitHub</span>
                <span class="social-handle">View my repositories and open source contributions</span>
              </div>
            </a>
            {% endif %}
            
            {% if site.author.social.linkedin %}
            <a href="{{ site.author.social.linkedin }}" 
               rel="noopener" 
               target="_blank" 
               class="social-link-card social-linkedin">
              <div class="social-icon">üíº</div>
              <div class="social-info">
                <span class="social-platform">LinkedIn</span>
                <span class="social-handle">Connect for professional networking</span>
              </div>
            </a>
            {% endif %}
            
            {% if site.author.social.twitter %}
            <a href="{{ site.author.social.twitter }}" 
               rel="noopener" 
               target="_blank" 
               class="social-link-card social-twitter">
              <div class="social-icon">üê¶</div>
              <div class="social-info">
                <span class="social-platform">Twitter</span>
                <span class="social-handle">Follow for tech updates and thoughts</span>
              </div>
            </a>
            {% endif %}
            
            {% if site.author.email %}
            <a href="mailto:{{ site.author.email }}" 
               class="social-link-card social-email">
              <div class="social-icon">‚úâÔ∏è</div>
              <div class="social-info">
                <span class="social-platform">Email</span>
                <span class="social-handle">Send me a message directly</span>
              </div>
            </a>
            {% endif %}
          </div>
        </div>
        {% endif %}
        
        <div class="connect-collaboration">
          <h3>Collaboration & Speaking</h3>
          <p>I'm always interested in:</p>
          <ul class="collaboration-list">
            <li>Technical writing and guest blogging opportunities</li>
            <li>Open source project collaborations</li>
            <li>Conference speaking and workshop facilitation</li>
            <li>Code reviews and technical consultations</li>
            <li>Mentoring and knowledge sharing</li>
          </ul>
          
          {% if site.author.email %}
          <p>
            <a href="mailto:{{ site.author.email }}?subject=Collaboration Inquiry" 
               class="contact-cta">
              Get in touch to discuss opportunities ‚Üí
            </a>
          </p>
          {% endif %}
        </div>
      </section>

      {% set recentPosts = collections.posts | slice(0, 3) %}
      {% if recentPosts.length > 0 %}
      <section class="about-recent">
        <h2>Recent Articles</h2>
        <div class="recent-articles-about">
          {% for post in recentPosts %}
          <article class="recent-article-card">
            <h3 class="recent-title">
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h3>
            <p class="recent-excerpt">{{ post.data.excerpt }}</p>
            <div class="recent-meta">
              <time datetime="{{ post.data.date | htmlDateString }}">
                {{ post.data.date | readableDate }}
              </time>
              <span class="recent-reading-time">{{ post.templateContent | readingTime }} min read</span>
            </div>
          </article>
          {% endfor %}
        </div>
        
        <div class="recent-actions">
          <a href="/articles/" class="view-all-articles">View all articles ‚Üí</a>
        </div>
      </section>
      {% endif %}
    </div>
  </article>
</div>

{# Structured data for author/person page #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ProfilePage",
  "name": "About {{ site.author.name }}",
  "description": "{{ site.author.bio }}",
  "url": "{{ site.url }}{{ page.url }}",
  "mainEntity": {
    "@type": "Person",
    "name": "{{ site.author.name }}",
    "jobTitle": "{{ site.author.title }}",
    "description": "{{ site.author.bio }}",
    "url": "{{ site.url }}{{ page.url }}",
    "image": "{{ site.url }}{{ site.author.photo }}",
    {% if site.author.location %}
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "{{ site.author.location }}"
    },
    {% endif %}
    {% if site.author.email %}
    "email": "{{ site.author.email }}",
    {% endif %}
    "sameAs": [
      {% if site.author.social.github %}"{{ site.author.social.github }}"{% endif %}
      {% if site.author.social.linkedin %}{% if site.author.social.github %},{% endif %}"{{ site.author.social.linkedin }}"{% endif %}
      {% if site.author.social.twitter %}{% if site.author.social.github or site.author.social.linkedin %},{% endif %}"{{ site.author.social.twitter }}"{% endif %}
    ],
    "knowsAbout": [
      {% for skill in site.author.skills -%}
      "{{ skill }}"{% if not loop.last %},{% endif %}
      {% endfor %}
    ],
    "author": [
      {% for post in collections.posts | slice(0, 5) %}
      {
        "@type": "BlogPosting",
        "headline": "{{ post.data.title }}",
        "url": "{{ site.url }}{{ post.url }}",
        "datePublished": "{{ post.data.date | htmlDateString }}"
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ]
  }
}
</script>