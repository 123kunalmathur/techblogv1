---
layout: base
---

<div class="articles-page">
  <header class="page-header">
    <h1 class="page-title">Articles</h1>
    <p class="page-description">{{ collections.posts.length }} articles on software development and technology</p>
    
    {% if collections.tagList.length > 0 %}
    <div class="page-filters">
      <h2 class="filters-title">Filter by topic:</h2>
      <div class="topic-filters">
        <a href="/articles/" class="filter-link active">
          All articles
        </a>
        {% for tag in collections.tagList | slice(0, 10) %}
        {% set taggedPosts = collections.posts | tagged(tag) %}
        <a href="/articles/tag/{{ tag | slug }}/" class="filter-link">
          {{ tag }} ({{ taggedPosts.length }})
        </a>
        {% endfor %}
      </div>
    </div>
    {% endif %}
  </header>

  <main class="articles-main">
    {% if collections.posts.length > 0 %}
    <div class="articles-list">
      {% for post in collections.posts %}
      <article class="article-preview{% if post.data.featured %} featured{% endif %}">
        <header class="preview-header">
          {% if post.data.featured %}
          <span class="featured-badge" aria-label="Featured article">Featured</span>
          {% endif %}
          
          <h2 class="preview-title">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </h2>
          
          <div class="preview-meta">
            <time datetime="{{ post.data.date | htmlDateString }}" class="preview-date">
              {{ post.data.date | readableDate }}
            </time>
            <span class="preview-reading-time">{{ post.templateContent | readingTime }} min read</span>
            {% if post.data.lastModified and post.data.lastModified != post.data.date %}
            <span class="preview-updated">
              Updated {{ post.data.lastModified | readableDate }}
            </span>
            {% endif %}
          </div>
        </header>
        
        <div class="preview-content">
          <p class="preview-excerpt">{{ post.data.excerpt }}</p>
          
          {% if post.data.tags and post.data.tags.length > 0 %}
          <div class="preview-tags">
            <span class="tags-label">Topics:</span>
            <ul class="tag-list">
              {% for tag in post.data.tags | slice(0, 4) %}
              <li class="tag-item">
                <a href="/articles/tag/{{ tag | slug }}/" class="tag-link" rel="tag">
                  {{ tag }}
                </a>
              </li>
              {% endfor %}
              {% if post.data.tags.length > 4 %}
              <li class="tag-item tag-more">
                +{{ post.data.tags.length - 4 }} more
              </li>
              {% endif %}
            </ul>
          </div>
          {% endif %}
          
          {% if post.data.codeLanguages and post.data.codeLanguages.length > 0 %}
          <div class="preview-tech">
            <span class="tech-label">Technologies:</span>
            <ul class="tech-list">
              {% for lang in post.data.codeLanguages | slice(0, 3) %}
              <li class="tech-item">{{ lang }}</li>
              {% endfor %}
            </ul>
          </div>
          {% endif %}
        </div>
        
        <footer class="preview-footer">
          <a href="{{ post.url }}" class="read-more-link">
            Read full article →
          </a>
        </footer>
      </article>
      {% endfor %}
    </div>
    
    {% if pagination.href.previous or pagination.href.next %}
    <nav class="pagination" aria-label="Articles pagination">
      <div class="pagination-links">
        {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous }}" class="pagination-link pagination-previous" rel="prev">
          ← Newer articles
        </a>
        {% endif %}
        
        <div class="pagination-info">
          Page {{ pagination.pageNumber + 1 }} of {{ pagination.hrefs.length }}
          <span class="pagination-count">
            ({{ posts.length }} of {{ collections.posts.length }} articles)
          </span>
        </div>
        
        {% if pagination.href.next %}
        <a href="{{ pagination.href.next }}" class="pagination-link pagination-next" rel="next">
          Older articles →
        </a>
        {% endif %}
      </div>
      
      {% if pagination.hrefs.length > 1 %}
      <div class="pagination-pages">
        <span class="pagination-label">Jump to page:</span>
        {% for href in pagination.hrefs %}
        {% set pageNum = loop.index %}
        <a href="{{ href }}" 
           class="pagination-page{% if pagination.pageNumber == loop.index0 %} current{% endif %}"
           {% if pagination.pageNumber == loop.index0 %}aria-current="page"{% endif %}>
          {{ pageNum }}
        </a>
        {% endfor %}
      </div>
      {% endif %}
    </nav>
    {% endif %}
    
    {% else %}
    <div class="empty-state">
      <h2>No articles found</h2>
      <p>There are no articles to display at the moment. Check back soon for new content!</p>
      <a href="/" class="back-home-link">← Back to homepage</a>
    </div>
    {% endif %}
  </main>

  <aside class="articles-sidebar">
    <section class="sidebar-section">
      <h2 class="sidebar-title">Popular Topics</h2>
      {% set popularTags = collections.tagList | slice(0, 8) %}
      {% if popularTags.length > 0 %}
      <div class="popular-topics">
        {% for tag in popularTags %}
        {% set taggedPosts = collections.posts | tagged(tag) %}
        <a href="/articles/tag/{{ tag | slug }}/" 
           class="topic-bubble" 
           title="{{ taggedPosts.length }} articles">
          {{ tag }}
          <span class="topic-count">{{ taggedPosts.length }}</span>
        </a>
        {% endfor %}
      </div>
      {% endif %}
    </section>
    
    {% set featuredPosts = collections.featuredPosts %}
    {% if featuredPosts.length > 0 %}
    <section class="sidebar-section">
      <h2 class="sidebar-title">Featured Articles</h2>
      <div class="featured-sidebar">
        {% for post in featuredPosts | slice(0, 3) %}
        <article class="featured-sidebar-item">
          <h3 class="featured-sidebar-title">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </h3>
          <div class="featured-sidebar-meta">
            <time datetime="{{ post.data.date | htmlDateString }}">
              {{ post.data.date | readableDate }}
            </time>
            <span class="featured-sidebar-reading-time">{{ post.templateContent | readingTime }} min read</span>
          </div>
        </article>
        {% endfor %}
      </div>
    </section>
    {% endif %}
    
    <section class="sidebar-section">
      <h2 class="sidebar-title">Recent Articles</h2>
      <div class="recent-links">
        {% for post in collections.posts | slice(0, 5) %}
        <a href="{{ post.url }}" class="recent-link">
          {{ post.data.title }}
        </a>
        {% endfor %}
      </div>
    </section>
  </aside>
</div>

{# Structured data for articles listing #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Articles{% if pagination.pageNumber > 0 %} - Page {{ pagination.pageNumber + 1 }}{% endif %}",
  "description": "Blog articles on software development and technology",
  "url": "{{ site.url }}{{ page.url }}",
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": {{ collections.posts.length }},
    "itemListElement": [
      {% for post in collections.posts %}
      {
        "@type": "BlogPosting",
        "position": {{ loop.index }},
        "headline": "{{ post.data.title }}",
        "description": "{{ post.data.excerpt }}",
        "url": "{{ site.url }}{{ post.url }}",
        "datePublished": "{{ post.data.date | htmlDateString }}",
        "author": {
          "@type": "Person",
          "name": "{{ site.author.name }}"
        }
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ]
  }
}
</script>